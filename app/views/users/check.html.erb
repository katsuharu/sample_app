<% provide(:title, 'マッチング相手情報') %>

<% if current_user.pair_id.nil? %>
  <p>まだマッチングしておりません</p>
<% else %>

  <h1>You got new Lunch Friends !!</h1>
  <% @pairs.each do |pair| %>

    <div class="col-lg-12">
      <div class="bs-component">
        <fieldset>
          <div class="form-group">
            <label>名前</label>
            <div><%= pair.try :name %></div>
          </div>

          <div class="form-group">
            <label>部署名</label>
            <div><%= pair.try :department_name %></div>
          </div>

          <div class="form-group">
            <label>Slack ID</label>
            <div><%= pair.try :slack_id %></div>
          </div>

          <div class="form-group">
            <label>プロフィール写真</label>
            <div><%= image_tag pair.profile_img.url if pair.profile_img? %></div>
          </div>
        </fieldset>
      </div>
    </div>

  <% end %>
<% end %>