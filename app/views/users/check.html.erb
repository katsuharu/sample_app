<% provide(:title, 'マッチング相手情報') %>
<% provide(:page_title, "マッチング相手情報") %>
<% @pairs.each do |pair| %>

  <div class="col-lg-12">
    <div class="bs-component">
      <fieldset>
        <div class="form-group">
          <label>名前</label>
          <div><%= @pair.try :name %></div>
        </div>

        <div class="form-group">
          <label>部署名</label>
          <div><%= @pair.try :department_name %></div>
        </div>

        <div class="form-group">
          <label>Slack ID</label>
          <div><%= @pair.slack_id %></div>
        </div>

        <div class="form-group">
          <label>プロフィール写真</label>
          <div><%= @pair.profile_img %></div>
        </div>
      </fieldset>
    </div>
  </div>

<% end %>