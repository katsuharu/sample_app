<% provide(:title, 'マッチング相手情報') %>

<% if current_user.pair_id.nil? %>
  <p>まだマッチングしておりません</p>
<% else %>

  <h1 class="eigo-title">You got new Lunch Friends !!</h1>
  <% @pairs.each do |pair| %>

    <div class="col-lg-12">
      <div class="bs-component">
        
        <div class="pair-info">
          <div class="pair-img">
            <div><%= image_tag pair.profile_img.url if pair.profile_img? %></div>
          </div>

          <div class="pair-text">
            <h4 class="cate_selected"><%= pair.try :name %>　さん</h4>
            <label>Slack ID（このIDを使い、グループを作成して下さい）</label>
            <div><%= pair.try :slack_id %></div>
          </div>

        </div>
          
      </div>
    </div>

  <% end %>
<% end %>