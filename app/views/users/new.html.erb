<%= provide(:tigle, '新規登録') %> 
<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード確認用" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :部署名 %>
      <%= f.text_field :department_name %>

      <%= f.label :スラックID %>
      <%= f.text_field :slack_id %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>