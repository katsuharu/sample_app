<% provide(:title, '会員情報') %>
<% provide(:page_title, "会員情報") %>

<div class="login-row">
  <div class="col-lg-12">
    <div class="bs-component">
      <fieldset>

        <div class="form-group">
          <label>名前</label>
          <div><%= @user.try :name %></div>
        </div>

        <div class="form-group">
          <label>メールアドレス</label>
          <div><%= @user.try :email %></div>
        </div>

        <div class="form-group">
          <label>部署名</label>
          <div><%= @user.try :department_name %></div>
        </div>

        <div class="form-group">
          <label>Slack ID</label>
          <div><%= @user.try :slack_id %></div>
        </div>

        <div class="form-group">
          <label>プロフィール写真</label>
          <div><%= image_tag @user.profile_img.url if @user.profile_img? %></div>
        </div>

      </fieldset>
    </div>
  </div>
</div>