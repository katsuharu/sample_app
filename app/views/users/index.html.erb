<div class="entry_top">
  <div class="index_left">
    <div class="collapse navbar-collapse" id="mainNav">
      <nav>
        <ul class="nav navbar-nav"> 
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag("triangle.svg", alt: "triangle", class: "header_show") %>　Menu
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "トップ", root_url %></li>
              <% if matched? %>
                <li><%= link_to "マッチング相手確認", check_path %></li>
              <% end %>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "趣味を編集", hobby_path %></li>
              <li><%= link_to "お問い合わせ", contact_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        </ul>
      </nav>
    </div>
    <div class="lunchfriends">
      <%= image_tag("lunchfriends.png", alt: "Lunch Friends", :size => "223x107", class: "") %>
    </div>
    <div class="lunch_kun">
      <%= image_tag("lunch_smile/asset-7-3-x.png", alt: "Lunch Smile", class: "Asset-73x") %>
    </div>
    <!-- マッチング済みの場合にマッチング相手確認ページリンクを表示 -->
    <% if matched? %>
      <div class="pair_check">
        <%= link_to "マッチング相手を確認する", check_path, class: "pair_check_link" %>
      </div>
    <% end %>
    <!-- 日付とエントリー状態を表示 -->
    <%= render 'shared/entry_state' %>
    <div class="lunch_card_container flex_container">
      <!-- ランチカードを表示 -->
      <%=  render partial: 'users/card', collection: @cards %>
    </div><!-- lunch_card_container -->
  </div>

  <div class="index_right">
  </div>
</div>