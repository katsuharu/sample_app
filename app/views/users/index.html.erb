<% if logged_in? %>
  <div class="entry-user">
    <div class="container-fluid entry-cnt">
      <h2>ユーザー情報</h2>
      <div class="user-info row">
        <div class="col-xs-4">
          <%= image_tag(@user.profile_img.url) if @user.profile_img? %>
        </div>
        <div class="col-xs-8">
          <%= render 'shared/user_info' %>
        </div>
      </div>
    </div>

    <div class="entry-cnt">
      <h2>エントリー中のユーザー</h2>
      <!-- スライドショー -->
      <% if @users.any? %>
        <div id="slider_wrap">
          <div id="slider">
              <div id="slider_inner">
                  <ul id="photo_list">
                    <% @users.each do |user| %>
                      <li>
                        <%= image_tag user.profile_img.url, :size => '160x160' if user.profile_img? %>
                      </li>
                    <% end %>
                  </ul>
              </div><!-- end of #slider_inner --> 
          </div><!-- end of #slider --> 
        </div><!-- end of #slider_wrap --> 
        <!--  -->    
      <% else %>
        <p>ただいまエントリー中のユーザーはいません。</p>
      <% end %>
    </div>

    <div class="entry-cnt">
        <%= render 'shared/entry_form' %>
    </div>
  </div>
<% else %>
  <div class="center">
  	<h1 class="bf-title">Lunch Friends</h1>
    <div class="bf-img">
      <%= image_tag("lunch_logo.png", alt: "Lunch Friends logo") %>
    </div>
  	<div class="bf-btn">
      <%= link_to "Sign up", signup_path, class: "square_btn" %>
    </div>
    <div class="bf-btn">
      <%= link_to "Login", login_path, class: "square_btn" %> 
    </div>
  </div>

<% end %>