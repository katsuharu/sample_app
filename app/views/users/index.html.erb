<% if logged_in? %>
  <div class="entry-user">
    <div class="container-fluid entry-cnt">
    <div class="today_date">
    <%= @today.year %>年<%= @today.month %>月<%= @today.day %>日
    </div>

      <input type=form id="search_form" placeholder="カテゴリー検索" style="width: 250px;"/>
      <ul id="search_result">
      </ul>


      <h2>おすすめのカテゴリー</h2>
      <ul>
        <% @hobby_pop.each do |pop| %>
          <li>
            <%= pop[0] %>
          </li>
        <% end %>
      </ul>

      <h2>Hobby Cards</h2>
        <% @cards.each do |card| %>
          <div class="">
            <%= card %>
            <%= UserHobby.where(hobby_name: card).count %>
          </div>
        <% end %>


      <!-- Timeline -->
      <h2>TimeLine</h2>

      <%= form_for(@apple, remote: true, url: { controller: 'apples', action: 'create'}) do |f| %>
        <div class="row">
          <div class="col-sm-9">
            <%= f.text_area :content, size: "55x2", placeholder: "投稿内容" %>
          </div>
          <div class="col-sm-3">
            <%= collection_select(:tweet, :category_id, Category.all, :id,  :name, 
            {include_blank: '選択してください'} ,{:class => "select-menu", required: true}) %>
            <%= f.submit "投稿", class: "" %>
          </div>
        </div>
      <% end %>


      <!-- Timeline -->
      <div class="timeline-shows">
        <div class="tweets">
          <%= render partial: 'tweets/tweet', collection: @tweets %>
        </div>
      </div>
      <!-- Timeline -->

      <!-- Thread -->
      <div class="modal fade t_detail">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="t_thread_name"></h4>
            </div>
            <div class="modal-body">
              <div class="t_thread_form">
              </div>
              <table id="t_threads">
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /Thread  -->
      <!-- /Timeline -->


      <h2>プロフィール</h2>
      <div class="user-info row">
        <div class="col-sm-4">
          <%= image_tag(@user.profile_img.url) if @user.profile_img? %>
        </div>
        <div class="col-sm-8">
          <%= render 'shared/user_info' %>
        </div>
      </div>
    </div>

    <div class="entry-cnt">
      <h2>エントリー中のユーザー</h2>
      <!-- スライドショー -->
      <% if @users.any? %>
        <div id="slider_wrap">
          <div id="slider">
              <div id="slider_inner">
                  <ul id="photo_list">
                    <% @users.each do |user| %>
                      <li>
                        <%= image_tag user.profile_img.url, :size => '160x160' if user.profile_img? %>
                      </li>
                    <% end %>
                  </ul>
              </div><!-- end of #slider_inner --> 
          </div><!-- end of #slider --> 
        </div><!-- end of #slider_wrap --> 
        <!--  -->    
      <% else %>
        <p>ただいまエントリー中のユーザーはいません。</p>
      <% end %>
    </div>

    <div class="entry-cnt">
        <%= render 'shared/entry_form' %>
    </div>
  </div>
<% else %>
  <div class="center">
    <h1 class="bf-title">Lunch Friends</h1>
    <div class="bf-img">
      <%= image_tag("lunch_logo.png", alt: "Lunch Friends logo") %>
    </div>
    <div class="bf-btn">
      <%= link_to "Sign up", signup_path, class: "square_btn bf-top" %>
    </div>
    <div class="bf-btn">
      <%= link_to "Login", login_path, class: "square_btn bf-top" %> 
    </div>
  </div>

<% end %>