<div class="row tweet">
	<div class="col-sm-1">
		<%= 
			if u = User.find_by(id: tweet.user_id)
				image_tag(u.profile_img.url, :size => "45x45") if u.profile_img? 
			end
		%>
	</div>

	<div class="col-sm-11">	
		<div class="row">
			<div class="col-sm-4">
				<strong>
				<%= 
					if u = User.find_by(id: tweet.user_id)
						u.name 
					end
				%>
				</strong>
			</div>
			<div class="col-sm-8">
				<%= tweet.created_at %>
			</div>
		</div>

		<div class="tweet_content">
		<%= tweet.content %>
		</div>
		<div>
			<div class="row">
				<div class="col-sm-4">
					<%= link_to tweet_path(tweet.id), 
						remote: true, class: "", :data => {:toggle=>"modal", :target => ".t_detail"} do %>
						<i class="far fa-comment"></i>
					<% end %>

					<%= TThread.where(tweet_id: tweet.id).count %>
				</div>
				<div class="col-sm-8">
					<%= if  tweet.category_id
							Category.find_by(id: tweet.category_id).name
						end
					%>
				</div>
			</div>
		</div>
	</div>
</div>