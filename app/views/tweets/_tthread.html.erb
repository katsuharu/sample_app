<tr>
	<td class="tweet_info"><%= 
			if u = User.find_by(id: tthread.user_id)
				image_tag(u.profile_img.url, :size => "35x35") if u.profile_img? 
			end
		%>
	</td>

	<td class="tweet_info">
		<%= 
			if u = User.find_by(id: tthread.user_id)
				u.name 
			end
		%>
	</td>

	<td class="tweet_cnt">
		<%= tthread.content %>
	</td>

	<td class="tweet_time">
		<%= tthread.created_at %>
	</td>

</tr>