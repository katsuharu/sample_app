<% provide(:title, "ログイン") %>
<h1 class="login-title">Lunch Friends</h1>

<div class="center">
  <h2 class="login-sub-title">ログイン/Login</h2>
</div>

<div class="login-row">

    <%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'メール / Mail', class: 'col-sm-4' %>
        <div class="col-sm-8">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード / Password',  class: 'col-sm-4' %>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="btn-center">
        <%= f.submit "Login", class: "square_btn" %>
        <p>※パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %></p>
        <p>※まだご登録されていない方は<%= link_to "こちら", signup_path %></p>
      </div>
    <% end %>

</div>