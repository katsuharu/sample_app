<% provide(:title, "ログイン") %>
<h1 class="bf-title">Lunch Friends</h1>

<h2 class="bf-sub-title">ログイン/Login</h2>

<div class="login-low">
    <%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
      
      <div class="form-group">
        <%= f.label :メールアドレス, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <%= link_to "(パスワードをお忘れですか？)", new_password_reset_path %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を記憶する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>登録はまだされてないですか？ <%= link_to "新規会員登録はこちら", signup_path %></p>
</div>