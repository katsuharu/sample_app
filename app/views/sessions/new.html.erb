<% provide(:title, "ログイン") %>
<h1 class="bf-title">Lunch Friends</h1>

<h2 class="bf-sub-title">ログイン/Login</h2>

<div class="row">
    <%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
      
      <div class="form-group">
        <%= f.label :メールアドレス, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <%= f.submit "Login", class: "square_btn" %>

      <p>※パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %></p>
      <p>※まだご登録されていない方は<%= link_to "こちら", signup_path %></p>

    <% end %>

</div>