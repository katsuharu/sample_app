<% provide(:title, "趣味を登録") %>

<h1 class="basic-heading">趣味を登録</h1>

  <div class="cta first_categories">
    <% @first_categories.each do |first| %>
      <div class="active" data-first="<%= p first[0] %>"><%= first[1] %></div>
    <% end %>
  </div>

  <div class="second_categories">
    <% @second_categories.each do |second| %>
      <div class="standby" data-first-id="<%= p second[2] %>" data-second="<%= p second[0] %>"><%= second[1] %></div>
    <% end %>
  </div>

  <div class="third_categories">
    <% @third_categories.each do |third| %>
      <div class="standby" data-second-id="<%= p third[2] %>" data-third="<%= p third[0] %>"><%= third[1] %></div>
    <% end %>
  </div>

  <div class="forth_categories">
    <% @forth_categories.each do |forth| %>
      <div class="standby" data-third-id="<%= p forth[2] %>" data-forth="<%= p forth[0] %>"><%= forth[1] %></div>
    <% end %>
  </div>
  
<hr>

<h3>登録する趣味一覧</h3>
  <%= form_tag({ controller: :user_hobbies, action: :hobby_save}, class: 'form-horizontal') do %>
  
    <div class="hobby_list">
      <div id="my_hobby" class="my_hobbies">
      </div>

      <div id="hobby_delete">
      </div>
    </div>

    <div class="form-actions btn-center">
      <%= submit_tag "趣味を登録", class: "square_btn", id: 'hobby_register' %>
    </div>

  <% end %>


  <hr>
<h3>My Hobby</h3>
    <%= form_tag("/user_hobbies/del_hobby", method: "post", data: { confirm: '削除してよろしいでしょうか？' }, class: "col-sm-9") do %>
    <% @hobbies.each do |hobby| %>
      <div class="display_flex">
        <%= label_tag 'user_hobbies[id]', hobby.hobby_name %>
        <%= check_box_tag 'user_hobbies[id][]', hobby.id,false, {required: true} %>
      </div>
      <% end %>
      <div class="form-actions btn-center">
        <%= submit_tag "チェックした趣味をMy Hobbyから削除", class: "square_btn" %>
      </div>
    <% end %>